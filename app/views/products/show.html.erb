<h1><%= @product.name %></h1>
<p><%= @product.description %></p>
<p>Price: <%= @product.price %></p>
<p>Stock: <%= @product.stock %></p>
<div>
  <%= button_to 'Edit', edit_product_path(@product), method: :get %>
  <%= button_to "Destroy", @product, method: :delete %>
</div>

<%= form_with(model: [@product, @product.orders.build], local: true) do |form| %>
  <div>
    <%= form.label :quantity %>
    <%= form.number_field :quantity, value: 1 %>
      <% if current_user&.seller? %>
      <%= form.submit 'Sell' %>
    <% end %>
    <%= form.submit 'Buy' %>
  </div>
<% end %>